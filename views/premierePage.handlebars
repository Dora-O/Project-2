{{#if loggedIn}}

<div class="container premiere">
    <div class="row">
        <div class="display">
            <h2>{{title}}</h2>
            <section class="player">
                <iframe width="960" height="615" src="{{media_link}}" title="YouTube video player" frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen></iframe>
            </section>
            <h4> Created {{projects_date}}</h4>
            <h2 class="display-user"> Created By {{users.username}}</h2>

            <p>{{description}}
            </p>
            <br><br><br>

        </div>
        <div class="comments">
            <section class="comment-title">

                <h2>COMMENTS</h2>
            </section>

            <form class="comment-form">
                <div>
                    <textarea class="comment-box" name="comment-body"></textarea>
                </div>

                <div>
                    <button class="button comment-button" type="submit">add comment</button>
                </div>

            </form>

            {{!-- ? MAKE THIS SCROLLABLE --}}
            <div class="comment-scroll">
                {{> comments projects.comments}}
            </div>
        </div>
        <div class="emailer">

            <a href="/api/emailers">
                <h2> INVITE YOUR FRIENDS </h2>
            </a>
        </div>
    </div>
</div>



{{else}}
<h2>MUST BE LOGGED IN TO WATCH </h2>
<h2>"{{title}}"</h2>

<img src="https://media0.giphy.com/media/5PhDDTC8lME8xi9Bcv/giphy.gif" alt="">
<br><br><br><br>
<a href="/login">
    <h2 class="error-title"> LOG IN HERE </h2>
</a>

<br>
{{/if}}

